<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AlertDialogCustom" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/Tomato</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/LightCyan</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:ems">10</item>
        <item name="android:textColor">@color/MediumVioletRed</item>
        <item name="android:textColorHint">@color/Tomato</item>
        <item name="android:backgroundTint">@color/Tomato</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/DeepPink</item>
    </style>

    <style name="TextView2Style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/MediumVioletRed</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:backgroundTint">@color/Tomato</item>
        <item name="android:text">@string/buttonText</item>
        <item name="android:textColor">@color/LightCyan</item>
    </style>

    <style name="TitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">36sp</item>
    </style>

    <style name="ImageStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">250dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/lightPink</item>
    </style>
</resources>